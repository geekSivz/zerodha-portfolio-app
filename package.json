{
  "name": "zerodha-portfolio-app",
  "version": "1.0.0",
  "description": "Portfolio dashboard for Zerodha account using Kite MCP",
  "main": "server.js",
  "scripts": {
    "start": "node start-app.js",
    "authorize": "node auto-auth.js",
    "dev": "concurrently \"npm run server\" \"cd client && npm run dev\"",
    "server": "node server.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "zerodha",
    "kite",
    "mcp",
    "portfolio",
    "trading"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lightweight-charts": "^5.0.9"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
